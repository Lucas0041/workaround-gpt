{
    "name": "ChatGPT Workaround",
    "version":"0.0.1",
    "manifest_version":3,
    "action":{
        "default_title": "ChatGPT Workaround",
        "default_popup": "popup.html",
        "default_icon":  {
            "16": "logo_128.png",
            "24": "logo_128.png",
            "32": "logo_128.png"
        }
    },
    "icons":{
        "128":"logo_128.png"
    },
    "content_scripts": [
        {
          "js": ["content_script.js"],
          "matches": ["https://chat.openai.com/chat/*"],
          "run_at": "document_start"
        }
    ],
    "permissions":["activeTab","scripting"]
}